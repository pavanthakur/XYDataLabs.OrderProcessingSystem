{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.39.26.7824",
      "templateHash": "2996442658395954727"
    }
  },
  "parameters": {
    "appName": {
      "type": "string",
      "metadata": {
        "description": "Name of the App Service"
      }
    },
    "keyVaultName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Key Vault"
      }
    },
    "appServicePlanName": {
      "type": "string",
      "metadata": {
        "description": "Name of the App Service Plan"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for all resources"
      }
    },
    "appServiceSku": {
      "type": "string",
      "defaultValue": "F1",
      "metadata": {
        "description": "App Service Plan SKU"
      }
    },
    "environment": {
      "type": "string",
      "defaultValue": "dev",
      "metadata": {
        "description": "Environment name (dev, uat, prod)"
      }
    },
    "openPayAdapterBaseUrl": {
      "type": "string",
      "defaultValue": "https://api.openpay.example.com",
      "metadata": {
        "description": "Non-secret OpenPayAdapter base URL"
      }
    }
  },
  "variables": {
    "aspNetCoreEnvironment": "[if(equals(parameters('environment'), 'dev'), 'Development', if(equals(parameters('environment'), 'uat'), 'Staging', 'Production'))]",
    "skuTierMap": {
      "F1": "Free",
      "B1": "Basic",
      "B2": "Basic",
      "B3": "Basic",
      "S1": "Standard",
      "S2": "Standard",
      "S3": "Standard",
      "P1v2": "PremiumV2",
      "P2v2": "PremiumV2",
      "P3v2": "PremiumV2",
      "P1v3": "PremiumV3",
      "P2v3": "PremiumV3",
      "P3v3": "PremiumV3"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2023-12-01",
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('appServiceSku')]",
        "tier": "[variables('skuTierMap')[parameters('appServiceSku')]]"
      },
      "properties": {
        "reserved": false
      },
      "tags": {
        "environment": "[parameters('environment')]",
        "app": "orderprocessing"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2023-12-01",
      "name": "[parameters('appName')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "httpsOnly": true,
        "siteConfig": {
          "netFrameworkVersion": "v8.0",
          "appSettings": [
            {
              "name": "ASPNETCORE_ENVIRONMENT",
              "value": "[variables('aspNetCoreEnvironment')]"
            },
            {
              "name": "OpenPayAdapter__BaseUrl",
              "value": "[parameters('openPayAdapterBaseUrl')]"
            },
            {
              "name": "OpenPayAdapter__ApiKey",
              "value": "[format('@Microsoft.KeyVault(SecretUri=https://{0}{1}/secrets/OpenPayAdapter--ApiKey/)', parameters('keyVaultName'), environment().suffixes.keyvaultDns)]"
            },
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[format('@Microsoft.KeyVault(SecretUri=https://{0}{1}/secrets/ApplicationInsights--ConnectionString/)', parameters('keyVaultName'), environment().suffixes.keyvaultDns)]"
            }
          ]
        }
      },
      "tags": {
        "environment": "[parameters('environment')]",
        "app": "orderprocessing",
        "role": "api"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
      ]
    },
    {
      "type": "Microsoft.KeyVault/vaults/accessPolicies",
      "apiVersion": "2023-07-01",
      "name": "[format('{0}/{1}', parameters('keyVaultName'), 'add')]",
      "properties": {
        "accessPolicies": [
          {
            "tenantId": "[subscription().tenantId]",
            "objectId": "[reference(resourceId('Microsoft.Web/sites', parameters('appName')), '2023-12-01', 'full').identity.principalId]",
            "permissions": {
              "secrets": [
                "get",
                "list"
              ]
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('appName'))]"
      ]
    }
  ],
  "outputs": {
    "appServiceName": {
      "type": "string",
      "value": "[parameters('appName')]"
    },
    "appServiceHostName": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('appName')), '2023-12-01').defaultHostName]"
    },
    "appServicePrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('appName')), '2023-12-01', 'full').identity.principalId]"
    },
    "appServicePlanName": {
      "type": "string",
      "value": "[parameters('appServicePlanName')]"
    }
  }
}